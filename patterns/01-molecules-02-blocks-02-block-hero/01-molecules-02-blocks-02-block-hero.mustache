&lt;div class=&quot;block block-hero&quot;&gt;
  &lt;div class=&quot;b-inner&quot;&gt;
    {{# nope }}
  	&lt;a href=&quot;{{ url }}&quot; class=&quot;b-link&quot;&gt;
  		&lt;div class=&quot;b-thumb&quot;&gt;
  			{{&gt; atoms-landscape-16x9 }}
  		&lt;/div&gt; &lt;!-- /.b-thumb --&gt;
  	&lt;/a&gt; &lt;!-- /.b-link --&gt;
  	{{/ nope }}
		&lt;div class=&quot;b-text pad&quot;&gt;
		  {{# breadcrumb }}
        {{&gt; molecules-breadcrumb }}
      {{/ breadcrumb }}
			&lt;h2 class=&quot;b-title&quot;&gt;&lt;a href=&quot;{{ url }}&quot;&gt;{{ headline.medium }}&lt;/a&gt;&lt;/h2&gt;
			{{# byline }}
        {{&gt; molecules-byline }}
      {{/ byline }}
      {{# dek }}
      &lt;div class=&quot;dek&quot;&gt;
        &lt;p&gt;{{ dek }}&lt;/p&gt;
      &lt;/div&gt; &lt;!-- /.dek --&gt;
      {{/ dek }}
		&lt;/div&gt; &lt;!-- /.b-text --&gt;
	&lt;/div&gt; &lt;!-- /.b-inner --&gt;
&lt;/div&gt; &lt;!-- /.block-hero --&gt;