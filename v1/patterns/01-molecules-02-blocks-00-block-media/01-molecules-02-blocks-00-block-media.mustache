&lt;div class=&quot;block block-media has-video {{ block-class }}&quot;&gt;
  {{# kicker }}
    {{&gt; molecules-kicker }}
  {{/ kicker }}
  &lt;a href=&quot;{{ url }}&quot; class=&quot;b-inner&quot;&gt;
    &lt;div class=&quot;b-text&quot;&gt;
      &lt;h3 class=&quot;b-title {{ title-class }}&quot;&gt;&lt;span&gt;{{{ title }}}&lt;/span&gt;&lt;/h3&gt;
      {{# dek }}
      &lt;div class=&quot;dek alt-dek {{ dek-class }}&quot;&gt;
        &lt;p&gt;{{ dek }}&lt;/p&gt;
      &lt;/div&gt; &lt;!-- /.dek --&gt;
      {{/ dek }}
    &lt;/div&gt; &lt;!-- /.b-text --&gt;
    &lt;div class=&quot;b-thumb&quot;&gt;
      &lt;div class=&quot;img-wrap&quot;&gt;
        {{# picturefill }}
          {{&gt; atoms-picturefill }}
        {{/ picturefill }}
        {{^ picturefill }}
          {{&gt; atoms-image }}
        {{/ picturefill }}
        &lt;span class=&quot;icon icon-play icon--big rounded&quot;&gt;{{&gt; atoms-play }}&lt;/span&gt;
      &lt;/div&gt; &lt;!-- /.img-wrap --&gt;
    &lt;/div&gt; &lt;!-- /.b-thumb --&gt;
  &lt;/a&gt; &lt;!-- /.b-inner --&gt;
&lt;/div&gt; &lt;!-- /.block-media --&gt;
