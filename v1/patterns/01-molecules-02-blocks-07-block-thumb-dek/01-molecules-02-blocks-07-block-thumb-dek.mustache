&lt;div class=&quot;block block-thumb block-thumb-dek {{ block-class }}&quot;&gt;
  &lt;div class=&quot;b-inner&quot;&gt;
    &lt;a href=&quot;{{ url }}&quot; class=&quot;b-link&quot;&gt;
      &lt;div class=&quot;b-thumb&quot;&gt;
        &lt;div class=&quot;img-wrap&quot;&gt;
          {{# picturefill }}
            {{&gt; atoms-picturefill }}
          {{/ picturefill }}
          {{^ picturefill }}
            {{&gt; atoms-image }}
          {{/ picturefill }}
        &lt;/div&gt; &lt;!-- /.img-wrap --&gt;
      &lt;/div&gt; &lt;!-- /.b-thumb --&gt;
    &lt;/a&gt; &lt;!-- /.b-link --&gt;
    &lt;div class=&quot;b-text&quot;&gt;
      &lt;h3 class=&quot;alt-heading&quot;&gt;{{ title }}&lt;/h3&gt;
      &lt;div class=&quot;dek text&quot;&gt;
        {{{ dek }}}
      &lt;/div&gt; &lt;!-- /.dek --&gt;
    &lt;/div&gt; &lt;!-- /.b-text --&gt;
  &lt;/div&gt; &lt;!-- /.b-inner --&gt;
&lt;/div&gt; &lt;!-- /.block-thumb-dek --&gt;
