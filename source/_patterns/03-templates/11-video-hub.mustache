					<!-- <a href="" class="hide-larger hide-large"><img src="http://dqckmuwjiytix.cloudfront.net/a/8933/img/300x250_Free%20Sample_static.jpg"></a> -->
					<a href=""><img src="http://placehold.it/300x600"></a>
				</div>
				<div class="g g-4up-2col-start">
					{{# video-recirc }}
						{{# videos }}
							<div class="gi">{{> molecules-block-thumb-headline }}</div>
						{{/ videos }}
					{{/ video-recirc }}
				</div> <!-- /.g-4up-2col-start -->
			</div> <!-- /.video__thumbs -->

		</section> <!-- /.section__video-recirc -->

		<div class="lc lc-inner space-double-btm pad-double-top">
			<div class="ad-blocks ad-responsive ad-instream">
				<div class="ad-block ad-300x250 hide-larger hide-large"><a href=""><img src="http://dqckmuwjiytix.cloudfront.net/a/8933/img/300x250_Free%20Sample_static.jpg"></a></div>
				<div class="ad-block ad-728x90 hide-larger hide-med hide-small"><a href=""><img src="http://s1.2mdn.net/viewad/3340030/clx_clb_e40024_value-oxi_rev_728x90.jpg"></a></div>
				<div class="ad-block ad-970x90 hide-large hide-med hide-small"><a href=""><img src="http://d.pr/i/10NZe+"></a></div>
			</div> <!-- /.ad-responsive -->
		</div> <!-- /.lc-inner -->

		<div class="pager center pad-top">
			<a href="" class="btn load-more js-toggle" data-toggled="section__video-recirc" data-prefix="more-thumbs">Load More</a>
		</div> <!-- /.pager -->

		{{> organisms-content-footer }}

	</div> <!-- /role=main -->

	{{> organisms-footer }}

</div> <!-- /.page -->
