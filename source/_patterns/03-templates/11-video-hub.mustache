					<li class="cl-item"><input id="checkbox2" name="checkbox" type="checkbox"><label for="checkbox2"><span>{{> atoms-check }}</span> Home <span class="cl-item-amt">(25)</span></label></li>
					<li class="cl-item"><input id="checkbox3" name="checkbox" type="checkbox"><label for="checkbox3"><span>{{> atoms-check }}</span> Style <span class="cl-item-amt">(2)</span></label></li>
					<li class="cl-item"><input id="checkbox4" name="checkbox" type="checkbox"><label for="checkbox4"><span>{{> atoms-check }}</span> Life <span class="cl-item-amt">(6)</span></label></li>
					<li class="cl-item"><input id="checkbox5" name="checkbox" type="checkbox"><label for="checkbox5"><span>{{> atoms-check }}</span> Shop <span class="cl-item-amt">(23)</span></label></li>
					<li class="cl-item"><input id="checkbox6" name="checkbox" type="checkbox"><label for="checkbox6"><span>{{> atoms-check }}</span> Holidays <span class="cl-item-amt">(32)</span></label></li>
				</ul>
			</div> <!-- /.video__filters -->

			<div class="video__thumbs">
