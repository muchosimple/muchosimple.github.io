<div class="page">
	{{> organisms-header }}
	<div class="main cf lc" role="main" aria-live="polite">

		<div class="cookie-calendar cc--pink">
			<header class="cc__header article-header cf center">
				<h1 class="cc__headline lead-headline pink" itemprop="headline">A Cookie A Day&hellip;</h1>
				<div class="cc__article-tools article-tools">
					{{> molecules-social-share }}
				</div> <!-- /.article-tools -->
				<div class="cc__months">
					<a href="" class="cc__month cc__month--active">November</a> <a href="" class="cc__month">December</a>
				</div> <!-- /.cc__months -->
			</header> <!-- /.cc__header -->

			<div class="cc__cookies">
				<ul class="cc__cookie-list js-cc__cookie-list cf js-gallery-grid">
					{{# cookies }}<li class="cc__cookie-list-item js-gi js-open-modal js-open-cc-modal">
						<div class="cc__block">
							<div class="cc__block-inner rel">
								<a href="#" class="cc__number js-toggle-parent">{{ number }}</a>
								<picture>
									<!--[if IE 9]><video style="display: none;"><![endif]-->
									<source srcset="{{ img.src2 }}" media="(min-width: 700px)">
									<!--[if IE 9]></video><![endif]-->
									<img srcset="{{ img.src1 }}" alt="{{ img.alt }}">
								</picture>
								<a href="#" class="cc__corner cc__corner--more js-toggle-parent"><span class="cc__corner-label">See More</span></a>
								<div class="cc__block-text">
									<div class="cc__block-text-inner rel">
										<span class="cc__kicker">November 2, 2015</span>
										<h2 class="cc__title">Chocolate Chip</h2>
										<div class="cc__dek">
											<p>Nullam massa ex, aliquet ac lectus at, fringilla facilisis risus. Sed eleifend velit ut posuere pulvinar. Vestibulum ullamcorper urna id ante ornare, et facilisis velit dictum. Nullam massa ex, aliquet ac lectus at, fringilla facilisis risus. Sed eleifend velit ut posuere pulvinar. Vestibulum ullamcorper urna id ante ornare, et facilisis velit dictum.</p>
											<a href="" class="cc__cta">Get the recipe</a>
										</div> <!-- /.cc__dek -->
										<span class="cc__credit">Photos by Michelle Smith</span>
									</div> <!-- /.cc__block-text-inner -->
									<div class="cc__social-wrap">
										<div class="cc__social social-share">
											<ul class="ss-list">
												<li class="ss-item">
													<a class="ss-link" href="{{ url }}">
														<span class="no-bg icon rounded icon-facebook icon--medium">{{> atoms-facebook }}</span>
													</a> <!-- /.ss-link -->
												</li> <!-- /.ss-item -->
												<li class="ss-item">
													<a class="ss-link" href="{{ url }}">
														<span class="no-bg icon rounded icon-twitter icon--medium">{{> atoms-twitter }}</span>
													</a> <!-- /.ss-link -->
												</li> <!-- /.ss-item -->
												<li class="ss-item">
													<a class="ss-link" href="{{ url }}">
														<span class="no-bg icon rounded icon-pinterest icon--medium">{{> atoms-pinterest }}</span>
													</a> <!-- /.ss-link -->
												</li> <!-- /.ss-item -->
											</ul> <!-- /.ss-list -->
										</div> <!-- /.social-share -->
									</div> <!-- /.cc__social-wrap -->
								</div> <!-- /.cc__block-text -->
								<a href="#" class="cc__corner cc__corner--less js-toggle-parent"><span class="cc__corner-label">Back</span></a>
							</div> <!-- /.cc__block-inner -->
						</div> <!-- /.cc__block -->
					</li>{{/ cookies }}

				</ul> <!-- /.cc__cookie-list -->
				<span class="cc__credit--btm pad-top black text--s">Photos by Michelle Smith</span>
			</div> <!-- /.cc__cookies -->

		</div> <!-- /.cookie-calendar -->

		<div class="lc-inner--m">
			{{> organisms-content-footer }}
		</div> <!-- /.lc-inner--m -->

	</div><!-- /role=main -->
	{{> organisms-footer }}
</div> <!-- /.page -->

{{# gallery }}
	<div class="cc__gallery gallery cc--pink hide modal">
		<div class="gallery__modal">
			<div class="rel cf">
				<span class="overlay-close icon icon--medium icon__x js-close" title="Close">{{> atoms-x }}</span>
				<div class="shift-left--900">
					<div class="shift-left-inner--900">
						<div class="cc__slides js-cc__slides slides js-slides">
							{{# slides }}
								{{> molecules-gallery-slide }}
							{{/ slides }}
						</div> <!-- /.cc__slides -->
					</div> <!-- /.shift-left-inner--900 -->
				</div> <!-- /.shift-left--900 -->
				<div class="shift-right--900 gm__aside">
					<div class="ad-block ad-300x250 block js-ad-refresh">
						<a href=""><img src="http://s1.2mdn.net/viewad/3521978/SINS_WebBanner_300x250.jpg"></a>
					</div> <!-- /.ad-300x250 -->
				</div> <!-- /.shift-right--900 -->
			</div> <!-- /.rel -->
		</div> <!-- /.gallery__modal -->
	</div> <!-- /.cc__gallery -->
{{/ gallery }}
