<div class="block block-thumb {{ block-class }}">
  <a href="{{ url }}" class="b-inner">
    <div class="b-thumb">
      <div class="img-wrap">
        {{# picturefill }}
          {{> atoms-picturefill }}
        {{/ picturefill }}
        {{^ picturefill }}
          {{> atoms-image }}
        {{/ picturefill }}
      </div> <!-- /.img-wrap -->
    </div> <!-- /.b-thumb -->
    <div class="b-text">
      {{# date }}
        {{> atoms-time }}
      {{/ date }}
      {{# kicker }}
        {{> molecules-kicker }}
      {{/ kicker }}
      {{# number }}
        <span class="rounded number">{{ number }}</span>
      {{/ number }}
      <h3 class="b-title"><span>{{{ title }}}</span></h3>
      {{# byline }}
        {{> molecules-byline }}
      {{/ byline }}
      {{# dek }}
      <div class="dek">
        <p>{{ dek }}</p>
      </div> <!-- /.dek -->
      {{/ dek }}
      {{# cta }}
        <span class="cta">{{ cta }}</span>
      {{/ cta }}
    </div> <!-- /.b-text -->
  </a> <!-- /.b-inner -->
</div> <!-- /.block-thumb -->
