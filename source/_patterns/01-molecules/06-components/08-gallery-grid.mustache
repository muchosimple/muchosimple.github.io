<div class="g gallery-grid">
  {{# gallery-grid }}
    <div class="block block-gi gi {{ gi-class }}" data-slide="{{ slide-num }}">
      <a href="{{ url }}" class="b-inner">
        <div class="b-thumb">
          {{> atoms-image }}
        </div> <!-- /.b-thumb -->
        <div class="b-text">
          <h3 class="b-title">{{ title }}</h3>
        </div> <!-- /.b-text -->
      </a> <!-- /.b-inner -->
    </div> <!-- /.block -->
  {{/ gallery-grid }}
</div> <!-- /.gallery-grid -->
