<article class="slide {{ slide-class }}" data-url="{{ data-url }}">
  <div class="slide-inner cf">

    {{^ is-ad-slide }}
      <div class="slide-img {{ slide-img-class }}">
        <div class="hover-slide-navigation">
          <a href="" class="icon no-bg icon-arrow-left js-slide-hover-prev">{{> atoms-arrow-left }}</a>
          <a href="" class="icon no-bg icon-arrow-right js-slide-hover-next">{{> atoms-arrow-right }}</a>
        </div> <!-- /.hover-slide-navigation -->
        {{> molecules-image-with-social }}
      </div> <!-- /.slide-img -->
    {{/ is-ad-slide }}

    {{# is-welcome-slide }}
      <div class="slide-intro slide-text">
        {{# kicker }}<div class="kicker">{{ kicker }}</div>{{/ kicker }}
        <p class="dek">{{ slide-intro }}</p>
        {{> molecules-byline }}
        <a href="{{ url }}" class="btn btn--gallery-start js-btn--gallery-start">Start <span class="icon icon-arrow-right no-bg">{{> atoms-arrow-right }}</span></a>
      </div> <!-- /.slide-intro -->
    {{/ is-welcome-slide }}

    {{# is-normal-slide }}
      <div class="slide-text {{ slide-text-class }}">
        <div class="slide-controls">
          {{> molecules-slide-counter }}
          {{# has-see-all }}
            <a href="{{ url }}" class="see-all--grid js-toggle" data-toggled="gallery-container" data-prefix="see-all-grid"><span class="icon icon-grid icon--small">{{> atoms-grid }}</span> <span class="light">See All</span></a>
          {{/ has-see-all }}
        </div> <!-- /.slide-controls -->
        <div class="text">
          {{# kicker }}<div class="kicker space-btm black">{{ kicker }}</div>{{/ kicker }}
          <h2 class="slide-title">{{ slide-title }}</h2>
          <p>{{{ slide-dek }}}</p>
          {{# has-cta }}<a class="slide__cta {{ slide-cta-class }}" href=""><strong>Get the recipe</strong></a>{{/ has-cta }}
          {{# has-side-credit }}<span class="credit">Photo by {{ credit }}</span>{{/ has-side-credit }}
        </div> <!-- /.text -->
      </div> <!-- /.slide-text -->
    {{/ is-normal-slide }}

    {{# is-ad-slide }}
      <div class="slide-controls">
        <div class="slide-navigation">
          <a href="{{ url }}" class="icon no-bg rounded icon-arrow-left icon--alt icon--medium js-slide-hover-prev">{{> atoms-arrow-left }}</a>
          <a href="{{ url }}" class="icon no-bg rounded icon-arrow-right icon--alt icon--medium js-slide-hover-next">{{> atoms-arrow-right }}</a>
          <div class="slide-count">Skip Ad</div>
        </div> <!-- /.slide-navigation -->
      </div> <!-- /.slide-controls -->
      <div class="ad-block-wrap">
        {{> atoms-ad-slide-500x250 }}
      </div> <!-- /.ad-block-wrap -->
    {{/ is-ad-slide }}

  </div> <!-- /.slide-inner -->
</article> <!-- /.slide -->
